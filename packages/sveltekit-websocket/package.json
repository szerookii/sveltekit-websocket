{
  "name": "@ubermanu/sveltekit-websocket",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./adapter": {
      "import": "./dist/adapter.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    },
    "./stores": {
      "types": "./dist/stores.d.ts",
      "svelte": "./dist/stores.js"
    }
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "package": "svelte-kit sync && svelte-package -i src && publint",
    "prepublishOnly": "npm run package"
  },
  "prettier": "@ubermanu/prettier-config",
  "dependencies": {
    "@sveltejs/adapter-node": "^4.0.1",
    "ws": "^8.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ubermanu/sveltekit-websocket.git",
    "directory": "packages/sveltekit-websocket"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/package": "^2.2.6",
    "@types/ws": "^8.5.10",
    "@ubermanu/prettier-config": "^3.3.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.7",
    "svelte": "^4.2.10",
    "svelte-check": "^3.6.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.1"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.5.0",
    "svelte": "^4.2.10"
  }
}
