{
  "name": "@ubermanu/sveltekit-websocket",
  "version": "0.3.0",
  "description": "SvelteKit Node adapter with WebSocket support",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ubermanu/sveltekit-websocket.git",
    "directory": "packages/sveltekit-websocket"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./adapter": {
      "types": "./adapter.d.ts",
      "import": "./adapter.js"
    },
    "./stores": {
      "svelte": "./stores.js"
    },
    "./vite": {
      "types": "./vite.d.ts",
      "import": "./vite.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "adapter.js",
    "adapter.d.ts",
    "files",
    "index.js",
    "index.d.ts",
    "stores.js",
    "vite.js",
    "vite.d.ts"
  ],
  "scripts": {
    "build": "node -e \"fs.rmSync('files', { force: true, recursive: true })\" && rollup -c",
    "check": "tsc",
    "dev": "node -e \"fs.rmSync('files', { force: true, recursive: true })\" && rollup -cw",
    "format": "pnpm lint --write",
    "lint": "prettier --check .",
    "prepublish": "pnpm run build"
  },
  "prettier": "@ubermanu/prettier-config",
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "rollup": "^4.29.1"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.11",
    "@sveltejs/kit": "^2.4.0",
    "@ubermanu/prettier-config": "^3.4.0",
    "prettier": "^3.4.2",
    "typescript": "^5.0.0",
    "vite": "^5.4.11",
    "ws": "^8.18.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.4.0",
    "vite": "^5.4.11"
  }
}
